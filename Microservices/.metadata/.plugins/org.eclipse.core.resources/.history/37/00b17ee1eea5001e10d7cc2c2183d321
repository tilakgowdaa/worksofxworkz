package in.net.liveasy.assignment.liveasy;

import java.util.Collection;
import java.util.Collections;
import java.util.Set;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.fasterxml.jackson.databind.introspect.TypeResolutionContext.Empty;

import jakarta.validation.ConstraintViolation;
import jakarta.validation.Validation;
import jakarta.validation.Validator;
import jakarta.validation.ValidatorFactory;

@Service
public class LiveasyServiceImpl implements LiveasyService {

	@Autowired
	private LiveasyRepo repo;

	@Override
	public Set<ConstraintViolation<Payload>> savePayload(Payload payload) {
		ValidatorFactory validatorFactory = Validation.buildDefaultValidatorFactory();
		Validator validator = validatorFactory.getValidator();
		Set<ConstraintViolation<Payload>> violations = validator.validate(payload);
		if (violations != null) {
			return violations;
		} else {
			repo.save(payload);
			return Collections.EMPTY_SET;

		}
	}

}
